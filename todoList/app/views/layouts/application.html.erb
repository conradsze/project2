<!DOCTYPE html>
<html>
<head>
  <title>Authentication - Finished</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <% if logged_in? %>
    <div class="container">
  <div class="row">
    <div class="col-md-3">
      Logged in as: <%= current_user.name %> | 
      </div>
        <div class="col-md-4 col-md-offset-5">
      <%= link_to 'Home', user_path(current_user) %> |
      <%= link_to 'Edit Profile', edit_user_path(current_user) %> |
      <%= link_to 'Log Out', logout_path, method: :delete %>
      
      </div>
      </div>
      </div>


          <div class="col-md-2">

    <ul class="nav nav-pills nav-stacked ">
      <li><%= link_to 'New Feed', tasks_path %> </li>
      <li><%= link_to 'My todo list', users_path %> </li>
      <li><%= link_to 'My profile', user_path(current_user) %> </li>
      <li><%= link_to 'Profile setting', edit_user_path(current_user) %> </li>
    </ul>
    

</div>

    <% else %>

      <div>
        <%= link_to 'Log In', login_path %> | <%= link_to 'Sign up', signup_path %>
      </div>
      
    <% end %>

    
    <!-- begin flash messages -->
    <% if flash[:welcome] %>
        <h4 class="bg-success flash"><%= flash[:welcome] %></h4>
    <% end %>
    <% if flash[:error] %>
        <h4 class="bg-danger flash"><%= flash[:error] %></h4>
    <% end %>
    <!-- end flash messages -->

    <div class="col-md-offset-2">
    <%= yield %>
    </div>

</body>
</html>
