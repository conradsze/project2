<h1>Edit profile</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-2">


      <%= form_for @user do |f| %>

      <% if @user.errors.any? %>
       <div>
         <h4 class="text-danger"><%= pluralize(@user.errors.count, "error") %>prevented you from signing up!</h4>
        <ul class="list-group">
        <% @user.errors.full_messages.each do |msg|%>
        <li class="list-group-item list-group-item-danger">
          <%= msg.downcase %>
        </li>
        <% end %>
        </ul>        
       </div>
       <% end %>
      
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :login_id, "Login ID" %>
          <%= f.text_field :login_id, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :bio %>
          <%= f.text_area :bio, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :interest %>
          <%= f.text_area :interest, class: "form-control" %>
        </div>  

        <div class="form-group">
          <%= f.label :image , "Profile Picture"%>
          <%= f.file_field :image, class: "form-control" %>
        </div>        

        <%= f.submit "change!", class: "btn btn-primary" %>
        
      <% end %>

      <%= link_to "deactive :(", @user ,method: :delete, class: "btn btn-danger"%>

    </div>
  </div>
</div>