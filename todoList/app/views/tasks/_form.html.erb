
<%= form_for(@task) do |f| %>
      <% if @task.errors.any? %>
       <div>
         <h4 class="text-danger"><%= pluralize(@task.errors.count, "error") %>prevented you from signing up!</h4>
        <ul class="list-group">
        <% @task.errors.full_messages.each do |msg|%>
        <li class="list-group-item list-group-item-danger">
          <%= msg.downcase %>
        </li>
        <% end %>
        </ul>        
       </div>
       <% end %>

     <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
     <div class="form-group">
    <%= f.label :day, "MM/DD/YYYY" %><br>
    <%= f.number_field :month , min: 1, max: 12%>
    <%= f.number_field :day , min: 1, max: 31%>
    <%= f.number_field :year , min: 2015, max: 9999%>
  </div>
     <div class="form-group">
    <%= f.label :event_type %><br>
    <%= f.text_field :event_type %>
  </div>
     <div class="form-group">
    <%= f.label :location %><br>
    <%= f.text_area :location %>
  </div>
      <div class="form-group">
    <%= f.label :body, "Description" %><br>
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <%= f.label :image , "Event Picture"%>
    <%= f.file_field :image %>
  </div>   
    <%= f.submit "submit!", class: "btn btn-primary" %>


<% end %>